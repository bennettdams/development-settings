{
  "telemetry.enableTelemetry": false,
  "breadcrumbs.enabled": false,
  "explorer.autoReveal": false,
  // FONT
  "editor.fontFamily": "Fira Code, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontWeight": "100",
  "editor.fontSize": 13,
  "terminal.integrated.fontFamily": "Fira Code Retina",
  //EDITOR
  "editor.renderIndentGuides": false,
  "editor.minimap.enabled": false,
  "editor.tabCompletion": "on",
  "editor.suggestSelection": "first",
  "editor.formatOnSave": true,
  "editor.lineDecorationsWidth": 25,
  "editor.padding.top": 40,
  // WORKBENCH
  "workbench.startupEditor": "newUntitledFile",
  "workbench.settings.editor": "json",
  "workbench.editor.restoreViewState": false,
  "workbench.tree.renderIndentGuides": "onHover",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.iconTheme": "vscode-icons",
  "workbench.colorCustomizations": {
    "[Default Dark+]": {
      "sideBar.background": "#1E1E1E",
      "titleBar.activeBackground": "#1E1E1E",
      "titleBar.inactiveBackground": "#1E1E1E",
      "tab.inactiveBackground": "#1E1E1E",
      "activityBar.activeBackground": "#1E1E1E",
      "activityBar.background": "#1E1E1E",
      "sideBarSectionHeader.background": "#1E1E1E"
    }
  },
  // WINDOW
  "window.titleBarStyle": "custom",
  "window.zoomLevel": 0,
  "window.menuBarVisibility": "toggle",
  // GIT & DIFF
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.alwaysShowStagedChangesResourceGroup": true,
  "diffEditor.ignoreTrimWhitespace": true,
  "diffEditor.renderSideBySide": true,
  // ESLINT
  "eslint.alwaysShowStatus": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  // SEARCH
  "search.showLineNumbers": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/coverage": true,
    "**/dist": true,
    "**/build": true,
    "**/.build": true,
    "**/.gh-pages": true
  },
  // TYPESCRIPT
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": true
    }
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": true
    }
  }
  // AUTOMATIC
}
